{
	"name": "ccusage",
	"type": "module",
	"version": "15.10.0",
	"packageManager": "pnpm@10.14.0",
	"description": "Usage analysis tool for Claude Code",
	"author": "ryoppippi",
	"license": "MIT",
	"funding": "https://github.com/ryoppippi/ccusage?sponsor=1",
	"homepage": "https://github.com/ryoppippi/ccusage#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ryoppippi/ccusage.git"
	},
	"bugs": {
		"url": "https://github.com/ryoppippi/ccusage/issues"
	},
	"exports": {
		".": "./dist/index.js",
		"./calculate-cost": "./dist/calculate-cost.js",
		"./data-loader": "./dist/data-loader.js",
		"./debug": "./dist/debug.js",
		"./logger": "./dist/logger.js",
		"./mcp": "./dist/mcp.js",
		"./pricing-fetcher": "./dist/pricing-fetcher.js",
		"./package.json": "./package.json"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": "./dist/index.js",
	"files": [
		"config-schema.json",
		"dist"
	],
	"workspaces": [
		".",
		"docs"
	],
	"engines": {
		"node": ">=20.19.4"
	},
	"scripts": {
		"build": "nr generate:schema && tsdown",
		"docs:build": "cd docs && nr build",
		"docs:deploy": "cd docs && nr deploy",
		"docs:dev": "cd docs && nr dev",
		"docs:preview": "cd docs && nr preview",
		"format": "nr lint --fix",
		"generate:schema": "bun run scripts/generate-json-schema.ts",
		"preinstall": "npx only-allow pnpm",
		"lint": "eslint --cache .",
		"mcp": "bunx @modelcontextprotocol/inspector nr start mcp",
		"prepack": "nr build && bun clean-pkg-json -r scripts.preinstall",
		"prepare": "git config --local core.hooksPath .githooks && nr generate:schema",
		"release": "nr lint && nr typecheck && vitest run && nr build && bumpp",
		"start": "bun run ./src/index.ts",
		"test": "TZ=UTC vitest",
		"test:statusline": "cat test/statusline-test.json | nr start statusline",
		"test:statusline:all": "echo 'Testing Sonnet 4:' && nr test:statusline:sonnet4 && echo 'Testing Opus 4.1:' && nr test:statusline:opus4 && echo 'Testing Sonnet 4.1:' && nr test:statusline:sonnet41",
		"test:statusline:opus4": "cat test/statusline-test-opus4.json | nr start statusline --offline",
		"test:statusline:sonnet4": "cat test/statusline-test-sonnet4.json | nr start statusline --offline",
		"test:statusline:sonnet41": "cat test/statusline-test-sonnet41.json | nr start statusline --offline",
		"typecheck": "tsgo --noEmit"
	},
	"devDependencies": {
		"@antfu/ni": "catalog:dev",
		"@antfu/utils": "catalog:library",
		"@core/errorutil": "catalog:library",
		"@hono/mcp": "catalog:library",
		"@hono/node-server": "catalog:library",
		"@mizchi/lsmcp": "catalog:dev",
		"@modelcontextprotocol/sdk": "catalog:library",
		"@oxc-project/runtime": "catalog:build",
		"@praha/byethrow": "catalog:library",
		"@praha/byethrow-mcp": "catalog:dev",
		"@ryoppippi/eslint-config": "catalog:dev",
		"@ryoppippi/limo": "catalog:library",
		"@std/async": "catalog:library",
		"@types/bun": "catalog:types",
		"@typescript/native-preview": "catalog:dev",
		"ansi-escapes": "catalog:library",
		"bumpp": "catalog:dev",
		"clean-pkg-json": "catalog:build",
		"cli-table3": "catalog:library",
		"consola": "catalog:library",
		"es-toolkit": "catalog:library",
		"eslint": "catalog:dev",
		"eslint-plugin-format": "catalog:dev",
		"fast-sort": "catalog:library",
		"fs-fixture": "catalog:test",
		"get-stdin": "catalog:library",
		"gunshi": "catalog:library",
		"hono": "catalog:library",
		"lint-staged": "catalog:dev",
		"nano-spawn": "catalog:library",
		"path-type": "catalog:library",
		"picocolors": "catalog:library",
		"pretty-ms": "catalog:library",
		"publint": "catalog:build",
		"sort-package-json": "catalog:build",
		"string-width": "catalog:library",
		"tinyglobby": "catalog:library",
		"tsdown": "catalog:build",
		"type-fest": "catalog:library",
		"unplugin-macros": "catalog:",
		"unplugin-unused": "catalog:build",
		"vitest": "catalog:test",
		"xdg-basedir": "catalog:library",
		"zod": "catalog:library"
	},
	"lint-staged": {
		"*": [
			"eslint --cache --fix"
		],
		"package.json": [
			"sort-package-json"
		]
	},
	"devEngines": {
		"runtime": {
			"name": "bun",
			"version": "^1.2.20",
			"onFail": "download"
		}
	}
}
