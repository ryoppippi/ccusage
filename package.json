{
	"name": "claude-code-tools",
	"version": "0.0.0",
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "^1.2.15",
		"bumpp": "^10.1.1",
		"clean-pkg-json": "^1.3.0",
		"cli-table3": "^0.6.5",
		"consola": "^3.4.2",
		"gunshi": "^0.25.0",
		"lint-staged": "^15.5.0",
		"picocolors": "^1.1.1",
		"publint": "^0.3.12",
		"simple-git-hooks": "^2.12.1",
		"tinyglobby": "^0.2.14",
		"tsdown": "^0.12.3",
		"typescript": "^5",
		"unplugin-unused": "^0.4.4",
		"valibot": "^1.1.0"
	},
	"bin": "./dist/index.js",
	"description": "Tools for working with Claude code",
	"lint-staged": {
		"*": ["biome check --write --no-errors-on-unmatched "]
	},
	"scripts": {
		"build": "tsdown ./index.ts --publint --unused",
		"report": "bun run index.ts",
		"lint": "biome check .",
		"format": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"prepare": "simple-git-hooks",
		"test": "bun test",
		"prepack": "bun run build && clean-pkg-json",
		"release": "bun lint && bun typecheck && bun test && bun run build && bumpp"
	},
	"simple-git-hooks": {
		"pre-commit": "bun lint-staged"
	},
	"trustedDependencies": ["@biomejs/biome", "simple-git-hooks"],
	"type": "module",
	"files": ["dist", "docs"]
}
