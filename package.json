{
	"name": "ccusage-monorepo",
	"type": "module",
	"version": "15.9.9",
	"description": "Usage analysis tool for Claude Code - Monorepo",
	"author": "ryoppippi",
	"license": "MIT",
	"funding": "https://github.com/ryoppippi/ccusage?sponsor=1",
	"homepage": "https://github.com/ryoppippi/ccusage#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ryoppippi/ccusage.git"
	},
	"bugs": {
		"url": "https://github.com/ryoppippi/ccusage/issues"
	},
	"private": true,
	"workspaces": [
		"packages/*",
		"docs"
	],
	"engines": {
		"node": ">=20.19.4"
	},
	"scripts": {
		"build": "cd packages/ccusage && bun run build",
		"docs:build": "cd docs && bun run build",
		"docs:deploy": "cd docs && bun run deploy",
		"docs:dev": "cd docs && bun run dev",
		"docs:preview": "cd docs && bun run preview",
		"format": "cd packages/ccusage && bun run format",
		"preinstall": "npx only-allow bun",
		"lint": "cd packages/ccusage && bun run lint",
		"mcp": "cd packages/ccusage && bun run mcp",
		"prepare": "git config --local core.hooksPath .githooks",
		"release": "cd packages/ccusage && bun run release",
		"start": "cd packages/ccusage && bun run start",
		"test": "cd packages/ccusage && bun run test",
		"test:statusline": "cd packages/ccusage && bun run test:statusline",
		"test:statusline:all": "cd packages/ccusage && bun run test:statusline:all",
		"test:statusline:opus4": "cd packages/ccusage && bun run test:statusline:opus4",
		"test:statusline:sonnet4": "cd packages/ccusage && bun run test:statusline:sonnet4",
		"test:statusline:sonnet41": "cd packages/ccusage && bun run test:statusline:sonnet41",
		"typecheck": "cd packages/ccusage && bun run typecheck"
	},
	"devDependencies": {
		"lint-staged": "^16.1.5",
		"sort-package-json": "^3.4.0"
	},
	"lint-staged": {
		"*": [
			"eslint --cache --fix"
		],
		"package.json": [
			"sort-package-json"
		]
	}
}
