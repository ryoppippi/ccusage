{
	"mcpServers": {
		"context7": {
			"type": "http",
			"url": "https://mcp.context7.com/mcp"
		},
		"grep": {
			"type": "http",
			"url": "https://mcp.grep.app"
		},
		"@praha/byethrow": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"--no-install",
				"byethrow-mcp"
			],
			"env": {}
		},
		"gunshi-doc": {
			"command": "npx",
			"args": [
				"--no-install",
				"sitemcp",
				"https://gunshi.dev/",
				"--concurrency 10",
				"--no-cache"
			]
		}
	}
}
