{
	"mcpServers": {
		"context7": {
			"type": "http",
			"url": "https://mcp.context7.com/mcp"
		},
		"lsmcp": {
			"command": "bun",
			"args": [
				"lsmcp",
				"-p",
				"tsgo"
			]
		},
		"@praha/byethrow": {
			"type": "stdio",
			"command": "bun",
			"args": [
				"byethrow-mcp"
			],
			"env": {}
		},
		"gunshi-doc": {
			"command": "bun",
			"args": [
				"x",
				"sitemcp",
				"https://gunshi.dev/",
				"--concurrency 10",
				"--no-cache"
			]
		}
	}
}
