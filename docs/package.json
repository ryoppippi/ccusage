{
	"name": "@ccusage/docs",
	"type": "module",
	"version": "15.0.0",
	"private": true,
	"description": "Documentation for ccusage",
	"scripts": {
		"build": "typedoc --excludeInternal && node update-api-index.mjs && ROLLDOWN_OPTIONS_VALIDATION=loose vitepress build",
		"deploy": "wrangler deploy",
		"dev": "typedoc --excludeInternal && node update-api-index.mjs && vitepress dev",
		"docs:api": "typedoc --excludeInternal && node update-api-index.mjs",
		"preview": "vitepress preview"
	},
	"devDependencies": {
		"fast-glob": "^3.3.3",
		"typedoc": "^0.28.5",
		"typedoc-plugin-markdown": "^4.6.4",
		"typedoc-vitepress-theme": "^1.1.2",
		"vitepress": "^1.6.0",
		"vitepress-plugin-group-icons": "^1.2.6",
		"vitepress-plugin-llms": "^1.5.1",
		"vitepress-plugin-mermaid": "^2.0.17",
		"wrangler": "^4.20.5"
	},
	"overrides": {
		"vite": "npm:rolldown-vite@latest"
	}
}
