{
  "name": "@ccusage/docs",
  "version": "16.2.5",
  "private": true,
  "description": "Documentation for ccusage",
  "type": "module",
  "scripts": {
    "build": "pnpm run docs:api && cp ../packages/ccusage/config-schema.json public/config-schema.json && vitepress build",
    "deploy": "wrangler deploy",
    "dev": "pnpm run docs:api && cp ../packages/ccusage/config-schema.json public/config-schema.json && vitepress dev",
    "docs:api": "./update-api-index.ts",
    "preview": "vitepress preview",
    "typecheck": "tsgo --noEmit"
  },
  "devDependencies": {
    "@ryoppippi/vite-plugin-cloudflare-redirect": "^1.1.2",
    "@typescript/native-preview": "^7.0.0-dev.20250821.1",
    "ccusage": "workspace:^",
    "tinyglobby": "^0.2.14",
    "typedoc": "^0.28.10",
    "typedoc-plugin-markdown": "^4.8.1",
    "typedoc-vitepress-theme": "^1.1.2",
    "vitepress": "^1.6.4",
    "vitepress-plugin-group-icons": "^1.6.3",
    "vitepress-plugin-llms": "^1.7.3",
    "wrangler": "^4.32.0"
  },
  "devEngines": {
    "runtime": [
      {
        "name": "node",
        "version": "^24.4.0",
        "onFail": "download"
